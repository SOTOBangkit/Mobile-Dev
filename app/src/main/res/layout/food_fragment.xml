<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_food_name"
            android:textColor="@color/app_red"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFoodNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="@color/app_red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_food_description"
            android:textColor="@color/app_red"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescriptionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAlignment="viewStart"
            android:textColor="@color/app_red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRecommendedRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_restaurant_name"
            android:textColor="@color/app_red"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8sp"/>

        <Button
            android:id="@+id/btnRecommendedRestaurantValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:padding="12dp"
            android:textColor="@color/app_red"
            app:cornerRadius="8dp"
            app:strokeColor="@color/app_red"
            app:strokeWidth="1.5sp"
            tools:text="Restaurant" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>